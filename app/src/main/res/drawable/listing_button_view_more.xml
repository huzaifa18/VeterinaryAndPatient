<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:color="@color/colorRed">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/colorDulBlack"/>
                    <!-- alttan gölge -->
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="3px"
                android:top="2px">
                <shape>

                    <gradient
                        android:startColor="@color/color_button_red_start"
                        android:endColor="@color/color_button_red_end"
                        android:angle="90" />
                    <corners
                        android:radius="15dp"/>

                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true"
        android:color="@color/color_button_red_end">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/colorDulBlack"/>
                    <corners android:radius="12dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/colorWhite"
                        android:endColor="@color/colorDulBlack"
                        android:angle="270" />
                    <corners
                        android:radius="12dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>