<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/listing_card"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Title "
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_below="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_margin="10dp">

            <!--<RelativeLayout
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/circular_drawable">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logi_icon"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:paddingStart="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Text 1"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Text 2"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_line_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Text 3"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/bt_item_detail"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1.3"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/listing_button_view_more">
            <TextView
                android:id="@+id/tv_viwe_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Detail"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>