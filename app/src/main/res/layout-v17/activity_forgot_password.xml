<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wth_gradian">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/ll_login_views"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:src="@drawable/logi_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="220dp"
                android:layout_height="@dimen/et_width"
                android:layout_marginTop="4dp"
                android:background="@drawable/et_background1"
                android:hint="@string/prompt_email"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorETHint"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="220dp"
                android:layout_height="@dimen/bt_width"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_press_syle"
                android:paddingBottom="6dp"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/progress_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logi_icon"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>