<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ll_to_inflat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_remove_view"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@android:drawable/ic_delete" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp">

                <EditText
                    android:id="@+id/et_experience_from"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_width"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/et_background1"
                    android:hint="From"
                    android:inputType="date"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:id="@+id/et_experience_to"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_width"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/et_background1"
                    android:hint="To"
                    android:inputType="date"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_organization_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_width"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_background1"
                android:hint="Organization Name"
                android:inputType="text"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="6dp" />

            <Button
                android:id="@+id/bt_document_copies_for_experience"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_width"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textAllCaps="false"
                android:text="Documents Copies"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:background="@drawable/button_press_syle"
                android:paddingEnd="4dp" />

                <LinearLayout
                    android:id="@+id/ll_inflate_document_for_experience"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp">

                    <FrameLayout
                        android:id="@+id/fl_document_for_experience"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_crose_file_name_experience"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="4dp"
                                app:srcCompat="@android:drawable/ic_delete" />

                            <TextView
                                android:id="@+id/tv_file_name_experience"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="filename"
                                android:textColor="@color/colorBlue" />

                            <TextView
                                android:id="@+id/tv_image_uri_experience"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/d_view_button_preview_experience"
                                android:layout_width="wrap_content"
                                android:layout_height="29dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/button_press_syle"
                                android:text="Preview"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="8dp" />

                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        </LinearLayout>


</FrameLayout>