<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_wth_gradian">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Finish Alert!"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/colorPrimary"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check up has been finished successfully or not ?"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_width"
                android:layout_gravity="bottom"
                android:background="@drawable/button_press_syle"
                android:text="Yes"
                android:id="@+id/finishVisitYes"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_width"
                android:layout_gravity="bottom"
                android:background="@drawable/button_press_syle"
                android:text="No"
                android:id="@+id/finishVisitNo"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>