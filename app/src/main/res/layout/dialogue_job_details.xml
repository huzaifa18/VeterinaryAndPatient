<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bacground_bottom">


        <RelativeLayout
            android:id="@+id/rl_circulor_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circular_drawable">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logi_icon"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rl_tvs"
            android:layout_below="@+id/rl_circulor_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginRight="4dp">

            <TextView
                android:id="@+id/tv_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_line_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Category: "
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_line_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_line_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary Range: "
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_line_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_line_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualifictation: "
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_line_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualifictation"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_line_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience Required: "
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_line_required_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eperience Required"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_line_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail: "
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_line_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/rl_tvs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="55dp">

            <Button
                android:id="@+id/bt_dialog_accpet"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/et_width"
                android:background="@drawable/button_press_stat"
                android:textAllCaps="false"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:text="Accept"/>

            <Button
                android:id="@+id/bt_dialog_ignor"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/et_width"
                android:background="@drawable/button_press_stat"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:text="Ignore"/>

        </RelativeLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>