<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="betaar.pk.SearchJobCategory"
    android:background="@drawable/background_wth_gradian">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">



        <RelativeLayout
            android:id="@+id/rl_spiner_job_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_width"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/spiner_background">

            <Spinner
                android:id="@+id/sp_select_job_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/job_categories"
                android:backgroundTint="@color/colorWhite"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />

        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_spiner_salary_range"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_width"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/spiner_background">

                <Spinner
                    android:id="@+id/sp_select_salary_range"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/salary_range"
                    android:backgroundTint="@color/colorWhite"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp" />
            </RelativeLayout>

    </LinearLayout>

        <Button
            android:id="@+id/bt_search"
            android:layout_width="150dp"
            android:text="Search"
            android:background="@drawable/button_press_syle"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_height="@dimen/et_width"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:id="@+id/progress_logo"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logi_icon"
            android:visibility="gone"/>

</RelativeLayout>


</android.support.constraint.ConstraintLayout>
