<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_wth_gradian">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_buttons_iews"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:fontFamily="serif"
            android:text="Register As"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_buttons_iews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">



            <RelativeLayout
                android:id="@+id/bt_call_a_veteriany"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle"
                android:layout_marginTop="10dp">



                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView1"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_vertrinarian"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_veterinarian"
                        android:text="Veterinarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"/>





            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bt_client"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle"
                android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView2"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_client"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_client"
                        android:text="Client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bt_organization"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle"
                android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView3"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_organization"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_organization"
                        android:text="Organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need help for whom to signup?"
                android:textColor="@color/color_pure_red"
                android:layout_marginTop="12dp"
                android:textSize="13sp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>