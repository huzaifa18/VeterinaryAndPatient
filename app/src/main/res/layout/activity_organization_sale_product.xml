<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="betaar.pk.OrganizationSaleProductActivity"
    android:background="@drawable/background_wth_gradian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideInset">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_spiner_product_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_width"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/spiner_background">

                <Spinner
                    android:id="@+id/sp_select_product_type"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorWhite"
                    android:entries="@array/product_types"
                    android:paddingLeft="4dp"
                    android:scrollbarThumbVertical="@drawable/scrollview_thumb"
                    android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_spiner_product_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_width"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/spiner_background">

                <Spinner
                    android:id="@+id/sp_select_product_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorWhite"
                    android:entries="@array/product_categories"
                    android:paddingLeft="4dp"
                    android:scrollbarThumbVertical="@drawable/scrollview_thumb"
                    android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_spiner_product_sub_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_width"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/spiner_background">

                <Spinner
                    android:id="@+id/sp_select_product_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorWhite"
                    android:entries="@array/product_categories_for_dairy"
                    android:paddingLeft="4dp"
                    android:scrollbarThumbVertical="@drawable/scrollview_thumb"
                    android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack"/>

            </RelativeLayout>


            <EditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_width"
                android:background="@drawable/et_background1"
                android:hint="Product Name"
                android:textColorHint="@color/colorETHint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_spiner_price_unit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_width"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="2"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/spiner_background">

                    <Spinner
                        android:id="@+id/sp_select_price_unit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/colorWhite"
                        android:paddingLeft="4dp"
                        android:scrollbarThumbVertical="@drawable/scrollview_thumb"
                        android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_width"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_background1"
                    android:hint="Price"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorETHint"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Product Images: "
                android:textColor="@color/colorRed"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:id="@+id/fl_document_for_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_crose_file_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        app:srcCompat="@android:drawable/ic_delete" />

                    <TextView
                        android:id="@+id/tv_file_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="filename"
                        android:textColor="@color/colorBlue" />

                    <TextView
                        android:id="@+id/tv_image_uri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/d_view_button_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_press_syle"
                        android:text="Preview"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="8dp" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone">


                <RelativeLayout
                    android:id="@+id/rl_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/tx_image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Image 1"
                        android:textColor="@color/colorWhite"/>

                    <ImageView
                        android:id="@+id/tv_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/tx_image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Image 2"
                        android:textColor="@color/colorWhite"/>
                    <ImageView
                        android:id="@+id/tv_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone">


                <RelativeLayout
                    android:id="@+id/rl_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/tx_image_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Image 3"
                        android:textColor="@color/colorWhite"/>

                    <ImageView
                        android:id="@+id/tv_image_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_image_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/tx_image_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Image 4"
                        android:textColor="@color/colorWhite"/>

                    <ImageView
                        android:id="@+id/tv_image_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>

                </RelativeLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/et_product_description"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/et_background"
                android:hint="Description"
                android:textColorHint="@color/colorETHint"
                android:paddingLeft="10dp"
                android:gravity="top"
                android:paddingTop="10dp"
                android:paddingRight="4dp"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"/>

            <RelativeLayout
                android:id="@+id/rl_bt_post"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/button_press_syle"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Post"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>


        </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    </LinearLayout>


    <ImageView
        android:id="@+id/progress_logo"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logi_icon"
        android:visibility="gone"/>

</RelativeLayout>
