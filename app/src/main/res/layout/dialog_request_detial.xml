<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bacground_bottom">

        <RelativeLayout
            android:id="@+id/rl_circulor_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circular_drawable">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logi_icon"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rl_tvs"
            android:layout_below="@+id/rl_circulor_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_line_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number Of Animals: "
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Text 1"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDulBlack"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/margin_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_line_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textColor="@color/colorWhite"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Text 2"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDulBlack"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/margin_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_line_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason of Visit: "
                android:textColor="@color/colorWhite"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_line_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Text 3"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDulBlack"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/margin_top"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/rl_tvs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center">
            
            <Button
                android:id="@+id/bt_dialog_accpet"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/et_width"
                android:background="@drawable/button_press_stat"
                android:textAllCaps="false"
                android:text="Accept"
                android:layout_gravity="center"
                android:gravity="center" />

            <Button
                android:id="@+id/bt_dialog_ignor"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/et_width"
                android:background="@drawable/button_press_stat"
                android:textAllCaps="false"
                android:text="Ignore"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="40dp"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>