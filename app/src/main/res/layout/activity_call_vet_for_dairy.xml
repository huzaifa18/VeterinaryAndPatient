<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="betaar.pk.CallVetForDairy"
    android:background="@drawable/background_wth_gradian">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Call Veterinarian For"
            android:textColor="@color/colorBlue"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">



        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_below="@+id/rl_spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/bt_treatment"
                android:layout_width="180dp"
                android:layout_height="@dimen/et_width"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/ic_treatment" />

                    <TextView
                        android:id="@+id/tv_treatment"
                        android:text="Treatment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_centerInParent="true" />


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bt_nutritionist"
                android:layout_width="180dp"
                android:layout_height="@dimen/et_width"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView3"
                        android:layout_toLeftOf="@+id/tv_nutritionist"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_nutritionist"/>

                <TextView
                    android:id="@+id/tv_nutritionist"
                    android:text="Nutritionist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:layout_centerInParent="true"/>



                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bt_breeding"
                android:layout_width="180dp"
                android:layout_height="@dimen/et_width"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView4"
                        android:layout_toLeftOf="@+id/tv_breeding"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_breeding"/>

                <TextView
                    android:id="@+id/tv_breeding"
                    android:text="Breeding   "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:layout_centerInParent="true"/>



                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bt_surgeon"
                android:layout_width="180dp"
                android:layout_height="@dimen/et_width"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_press_syle"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView5"
                        android:layout_toLeftOf="@+id/tv_sergeon"
                        android:layout_marginRight="5dp"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_surgeon"/>

                <TextView
                    android:id="@+id/tv_sergeon"
                    android:text="Surgeon  "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:layout_centerInParent="true"/>



                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>